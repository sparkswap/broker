{
  "name": "broker",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "config": {
    "project_name": "broker",
    "daemon": "kbd"
  },
  "scripts": {
    "prebuild": "bash ./scripts/prebuild.sh",
    "build": "bash ./scripts/build.sh",
    "destroy": "bash ./scripts/destroy.sh",
    "format": "standard --fix",
    "format-non-fail": "npm run format; exit 0",
    "pretest": "npm run format-non-fail",
    "test": "npm run docker-test",
    "test-broker": "NODE_PATH=. mocha 'broker-cli/**/*.spec.js' 'broker-daemon/**/*.spec.js'",
    "coverage": "docker-compose exec $npm_package_config_daemon npm run docker-coverage",
    "docker-coverage": "nyc npm run docker-test",
    "docker-test": "docker-compose exec $npm_package_config_daemon npm run test-broker",
    "ci-test": "npm run format && npm run test-broker"
  },
  "standard": {
    "env": [
      "mocha",
      "chai"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kinesis-exchange/broker.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kinesis-exchange/broker/issues"
  },
  "homepage": "https://github.com/kinesis-exchange/broker#readme",
  "dependencies": {
    "caporal": "0.10.0",
    "colors": "1.2.4",
    "compare-versions": "3.1.0",
    "grpc": "1.10.1",
    "level": "3.0.0",
    "level-sublevel": "6.6.1",
    "lnd-engine": "kinesis-exchange/lnd-engine",
    "validator": "9.4.1"
  },
  "devDependencies": {
    "chai": "4.1.2",
    "chai-as-promised": "7.1.1",
    "dirty-chai": "2.0.1",
    "eslint": "4.19.1",
    "eslint-plugin-import": "2.11.0",
    "mocha": "5.1.0",
    "mock-require": "3.0.2",
    "nyc": "11.7.1",
    "rewire": "4.0.1",
    "sinon": "4.5.0",
    "sinon-chai": "3.0.0",
    "standard": "11.0.1",
    "timeout-as-promise": "1.0.0"
  },
  "engines": {
    "node": "8.x.x"
  }
}
